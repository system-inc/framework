{
	"title": "Test Web Server",
	"modules": {
		"console": {
			"log": {
				"enabled": true
			}
		},
		"database": {
			"databases": {
				"frameworkTest": {
					"host": "localhost",
					"username": "framework_test",
					"password": "framework_test",
					"databaseName": "framework_test"
				}
			}
		},
		"webServer": {
			"webServers": [
				{
					"logs": {
						"general": {
							"enabled": true
						},
						"requests": {
							"enabled": true
						},
						"responses": {
							"enabled": true
						}
					},
					"protocols": {
						"http": {
							"ports": [
								8080
							]
						}
					},
					"router": {
						"routes": [
							{
								"type": "redirect",
								"redirectStatusCode": 301,
								"redirectHost": "server",
								"hosts": [
									"192.168.1.40"
								],
								"methods": "*",
								"expression": ".*"
							},
							{
								"type": "controller",
								"controllerName": "Main",
								"controllerMethodName": "main",
								"hosts": [
									"server",
									"localhost"
								],
								"expression": "/",
								"data": {
									"rootData": "root!",
									"view": "root"
								},
								"children": [
									{
										"type": "proxy",
										"proxyUrl": "http://www.yougetsignal.com",
										"expression": "yougetsignal(.*?)"
									},
									{
										"type": "redirect",
										"redirectStatusCode": 301,
										"redirectLocation": "http://www.google.com/",
										"expression": "google/?"
									},
									{
										"type": "file",
										"expression": "images/(.*)"
									},
									{
										"expression": "users/(\\w+?)/?",
										"data": {
											"view": "user",
											"1": "username"
										},
										"description": "Users!",
										"children": [
											{
												"expression": "story/(\\w+?)/?",
												"data": {
													"view": "userStory",
													"1": "story"
												}
											}
										]
									},
									{
										"methods": "PUT",
										"controllerMethodName": "main",
										"expression": "putOnly/?",
										"data": {
											"view": "putOnly"
										}
									},
									{
										"controllerMethodName": "contact",
										"expression": "contact/?",
										"data": {
											"contactData": "contact!",
											"view": "contact"
										}
									},
									{
										"controllerMethodName": "legal",
										"expression": "legal/?",
										"data": {
											"legalData": "legal",
											"view": "legal"
										},
										"children": [
											{
												"controllerMethodName": "legalTermsOfService",
												"expression": "terms-of-service/?",
												"data": {
													"legalTermsOfServiceData": "legalTermsOfService",
													"view": "legalTermsOfService"
												},
												"children": [
													{
														"controllerMethodName": "legalTermsOfServiceIOs",
														"expression": "ios/?",
														"data": {
															"legalTermsOfServiceIOsData": "legalTermsOfServiceIOs",
															"view": "legalTermsOfServiceIOs"
														}
													}
												]
											}
										]
									}
								]
							}
						]
					}
				}
			]
		}
	}
}