{
	title: 'Assistant \u2022 Framework',
	modules: {
		console: {
			log: {
				enabled: false,
			},
		},
		electron: {
			mainBrowserWindow: {
				windowState: {
					remember: false,
					defaultWindowState: {
						applyOn: {
							displayAdded: true,
							displayRemoved: true,
							displayMetricsChanged: true,
						},
						oneDisplay: {
							display: 1,
							mode: 'normal',
							width: .5, // Production
							//width: 1, // Development
							height: .5, // Production
							//height: .75, // Development
							x: 'right',
							y: 'bottom',
						},
						twoDisplays: {
							display: 2,
							mode: 'normal',
							width: .5, // Production
							//width: 1, // Development
							height: .5, // Production
							//height: .75, // Development
							x: 'left',
							y: 'bottom',
						},
					},
				},
				developerTools: {
					show: true, // Development
				},
			},
			shortcuts: {
				reloadFocusedWindow: false, // Uncomment this when ready to go to production
			},
		},
	},
}